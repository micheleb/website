---
const { id, title, skills, subtitle } = Astro.props;
---

<div class="flex pt-4" id={id}>
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span
      class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"
    ></span>
  </div>
  <div class="experience__data bd-grid px-5">
    <h3 class="font-semibold pb-1">{title}</h3>
    <span class="font-light text-sm">{subtitle}</span>
    <p class="py-2 ext-justify">
      <slot />
    </p>
    {
      skills?.length && (
        <div class="pt-4 pb-8">
          <>
            <span class="font-bold">Skills used: </span>
            <span>{skills.join(", ")}</span>
          </>
        </div>
      )
    }
  </div>
</div>
